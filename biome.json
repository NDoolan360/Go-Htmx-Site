{
    "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    },
    "overrides": [
        {
            "include": ["*.config.ts"],
            "linter": {
                "rules": {
                    "nursery": {
                        "noDefaultExport": "off"
                    }
                }
            }
        }
    ]
}
