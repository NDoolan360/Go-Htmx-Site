{
    "version": 2,
    "installCommand": "make install",
    "buildCommand": "make build",
    "rewrites": [
        {
            "source": "/",
            "destination": "/api/index.go"
        },
        {
            "source": "/markdown",
            "destination": "/api/markdown.go"
        },
        {
            "source": "/manifest.json",
            "destination": "/api/manifest.go"
        },
        {
            "source": "/sitemap.xml",
            "destination": "/api/sitemap.go"
        }
    ],
    "functions": {
        "api/*.go": {
            "includeFiles": "assets/**/*"
        }
    }
}
