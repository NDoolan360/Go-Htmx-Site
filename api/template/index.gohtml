<!DOCTYPE html>
<html lang="en">

{{ template "head" .}}

<body class="dark">
    <header>
        <h1>
            <a href="/"> /ND </a>
        </h1>
        <nav>
            <ul id="internal-links" aria-label="internal links">
                {{range .InternalLinks -}}
                <li>
                    <a href="{{.URL}}">{{.Label}}</a>
                </li>
                {{- end}}
            </ul>
        </nav>
        <ul id="external-links" aria-label="external links">
            {{range .ExternalLinks -}}
            <li>
                <a href="{{.URL}}" target="_blank" rel="noreferrer">
                    {{if .Logo -}}
                    {{.Logo}}
                    {{- else -}}
                    {{.Label}}
                    {{- end}}
                </a>
            </li>
            {{- end}}
            <li>
                <button id="theme-toggle" title="Toggles light & dark theme" aria-label="auto" aria-live="polite"
                    _="on click toggle .dark on body">
                    {{.ThemeSwitchSVG}}
                </button>
            </li>
        </ul>
    </header>

    <main>
        <section id="about">
            <div class="heading">
                <h2>About</h2>
                <hr>
            </div>
            <div id="profile">
                <img alt="Profile Image" {{range .Profile.ImageAttr}}{{.}}{{end}} height="192">
                <div>
                    {{range .Profile.Paragraphs -}}
                    <p>{{.}}</p>
                    {{- end}}
                </div>
            </div>
        </section>

        <section id="experience">
            <div class="heading">
                <h2>Experience</h2>
                <hr>
            </div>
            <ol hx-get="/api/experiences" hx-trigger="load">
                <span class="loader"></span>
            </ol>
            <a class="btn" href="/documents/Nathan-Doolan-Resume.pdf" download>
                Full Resume &RightArrow;
            </a>
        </section>

        <section id="projects">
            <div class="heading">
                <h2>Projects</h2>
                <hr>
            </div>
            <ul id="project-gallery" hx-get="/api/projects?host=github&host=bgg&host=cults3d" hx-trigger="load">
                <span class="loader"></span>
            </ul>
        </section>

        <footer>
            {{range .ToolSections -}}
            <div id="tools">
                <h3>{{.Title}}</h3>
                <ul>
                    {{range .Links -}}
                    <li>
                        <a class="btn" href="{{.URL}}" target="_blank" rel="noreferrer">
                            {{.Logo}}
                            <p>{{.Label}}</p>
                        </a>
                    </li>
                    {{- end}}
                </ul>
            </div>
            {{- end}}
            <p> &copy; Nathan Doolan {{.CopyrightYear}} </p>
        </footer>
    </main>
</body>

</html>
